<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.muntunak.sevoapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" 
        android:maxSdkVersion="21"/>
    
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
	
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name="com.muntunak.sevoapp.MainSplashScreen" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- News Feed Activity -->
        <activity android:name="com.muntunak.sevoapp.NewsFeedActivity" ></activity>
        
        <!-- Landing Screen -->
        <activity android:name="com.muntunak.sevoapp.DashboardActivity"></activity>

        <!-- Friends Activity -->
        <activity android:name="com.muntunak.sevoapp.FriendsActivity" ></activity>

        <!-- Messages Activity -->
        <activity android:name="com.muntunak.sevoapp.MessagesActivity" ></activity>

        <!-- Places Activity -->
        <activity android:name="com.muntunak.sevoapp.PlacesActivity" ></activity>

        <!-- Events Activity -->
        <activity android:name="com.muntunak.sevoapp.EventsActivity" ></activity>
        
        <!-- Photos Activity -->
        <activity android:name="com.muntunak.sevoapp.PhotosActivity" ></activity>
        <!-- Photos Activity -->
        <activity android:name="com.muntunak.sevoapp.Example" ></activity>
        <activity android:name="com.muntunak.sevoapp.TwitterUser" ></activity>
        <activity android:name="com.muntunak.sevoapp.Twitter" ></activity>
        <activity android:name="com.muntunak.sevoapp.Tweet" ></activity>
    </application>

</manifest>